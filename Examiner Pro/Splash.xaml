<Window x:Class="Examiner_Pro.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Splash" Height="350" Width="600" Loaded="Window_Loaded" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://siteoforigin:,,,/Media/education_banner.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="1" Grid.Column="1"  Height="40" Margin="0,26,0,0" Name="BaseTextBox" VerticalAlignment="Top" 
                   Text="Examiner Pro (ver 1.0)" FontSize="24" FontWeight="Bold" />
        <TextBlock Grid.Row="1" Grid.Column="1"  Height="40" Margin="0,70,0,0" VerticalAlignment="Top" 
                   Text="by: Affan Raja " FontSize="16" FontWeight="Bold" />
    </Grid>
</Window>
